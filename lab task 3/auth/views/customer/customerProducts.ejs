}

  .dropdown-content {
    display: none;
    position: relative;
    background-color: #f1f1f1;
    min-width: 150px;
    box-shadow: 1px 2px 1px 2px rgba(0,0,0,0.2);
    overflow: hidden;
  
  }
  
  .dropdown-content a {
    color: black;
    /* position: relative; */
    padding: 12px 16px;
    text-decoration: none;
    display: block;

    text-transform: none;
    box-sizing: border-box;

    float:inline-start;
    text-align: center;

    overflow: hidden;
  }
  .drop{
    margin-left :200px;
    font-size:20px;
    font-weight: bolder;
  }
.dropdown{
  overflow: hidden;
}

.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block;}

.dropdown:hover .drop {color: green;}

</style>
</head>

<body>
  <%- include('header') %>
  
  <div class=" dropdown ">
    <p class="drop"> </p>
    <div class="dropdown-content">
        <ul style="display: flex; flex-direction: row;">
        <a class="nav-link" href="#">Clothes</a>
        <a class="nav-link" href="#">Shoes</a>
        <a class="nav-link" href="#">Watches</a>
        <a class="nav-link" href="#">cosmetics</a>
        <a class="nav-link" href="#">perfume</a>
        </ul>    
    </div>
    </div>
 
  

   
       
  
    
      <div class="product-list" style="justify-content: center;display: flex;">
        <% products.forEach(function(product) { %>
        <div class="product">
          <div class="p-image float-left image"  >
            <img style="margin-left: -40px;" class="p-5 bd-highlight image-thumbnail float-left"  width="300px" height="300px" src="data:image/<%= product.img %>;base64, <%= product.img %>" alt="<%= product.name %>" />
          </div>
          <div class="product-details">
            <h3 class="product-name"><%= product.name %>           <span class="product-price">$<%= product.Price %></span>
            </h3>
            <a href="/customer/cart/<%= product._id %>" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
        <% }); %>
      </div>
</body

