    body{
    font-family:  'Arial Narrow', Arial, sans-serif;
}
.navi{
    background-color:#f4eece;
    
}
.img{
    margin-left: 70px;
}
.important{
    font-size: 20px;
    color: rgb(204, 21, 107);
    font-size: bold;
}
.read{
    font-size: 20px;
    font-weight: bolder;
}
.press{
    margin-top: -40px;

}
.press1:hover{
